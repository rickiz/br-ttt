@using BR.ToteToToe.Web.Helpers
@using BR.ToteToToe.Web.Areas.Admin.ViewModels
@model ModelImageViewModel
@{
    ViewBag.Title = "Upload Model Image";
}

@using (Html.BeginForm(MVC.Admin.Model.UploadImage(), FormMethod.Post,
    new { @class = "form-horizontal", role = "form", id = "frmMain", enctype = "multipart/form-data" }))
{
    <table width="100%">
        <tr>
            <td>
                @Html.HiddenFor(model => model.CategoryName)
                @Html.HiddenFor(model => model.ModelID)
                @Html.HiddenFor(model => model.ModelColourDescID)
            </td>
        </tr>
        <tr>
            <td>
                <div class="form-group row">
                    @Html.Label("Main Image", new { @class = "col-sm-3 control-label text-info" })
                    <div class="col-sm-5">
                        @if (!string.IsNullOrEmpty(Model.MainImage))
                        {
                            <img src ="@Url.Content(Model.MainImage)" />
                        }
                        <input type="file" id="fileMain111" name="fileMain" />
                    </div>
                </div>
            </td>
            <td>
                <div class="form-group row">
                    @Html.Label("Sub Image", new { @class = "col-sm-3 control-label text-info" })
                    <div class="col-sm-5">
                        @if (!string.IsNullOrEmpty(Model.SubImage))
                        {
                            <img src ="@Url.Content(Model.SubImage)" />
                        }
                        <input type="file" id="fileSub" name="fileSub" />
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2"><hr /></td>
        </tr>
        <tr>
            <td>
                <div class="form-group row">
                    @Html.Label("Thumbnail 1", new { @class = "col-sm-3 control-label text-info" })
                    <div class="col-sm-5">
                        @if(Model.ModelImages.Count>0)
                        {
                            <img src ="@Url.Content(string.Format("~/Images/{0}/{1}", Model.CategoryName, Model.ModelImages[0].Thumbnail))" />
                        }
                        <input type="file" id="fileThumbnail1" name="fileThumbnail1" />
                    </div>
                </div>
            </td>
            <td>
                <div class="form-group row">
                    @Html.Label("Image 1", new { @class = "col-sm-3 control-label text-info" })
                    <div class="col-sm-5">
                        @if(Model.ModelImages.Count>0)
                        {
                            <img src ="@Url.Content(string.Format("~/Images/{0}/{1}", Model.CategoryName, Model.ModelImages[0].Image))" />
                        }
                        <input type="file" id="fileImage1" name="fileImage1" />
                    </div>
                </div>
            </td>
        </tr>
