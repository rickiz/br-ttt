@using BR.ToteToToe.Web.Helpers

<!DOCTYPE html>
<html lang="en">
    <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <title>@ViewBag.Title - TOTE TO TOE</title>

    @{
        Html.Telerik().StyleSheetRegistrar()
            .DefaultGroup(g => g
                .Add("bootstrap.css")
                .Add("bootstrap-theme.css")
                .Add("telerik.common.css")
                .Add("telerik.Metro.min.css")                
                .Add("sticky-footer-navbar.css")
                .Add("SiteAdmin.css")
            ).Render();
    }

</head>
<body>
    <div id="wrap">
        <!-- Fixed navbar -->
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Tote To Toe", MVC.Home.Index(), new { @class = "navbar-brand", area = "" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.MenuLink("Status", "Index", "OrderStatus", "Admin")</li>
                        @*<li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Configuration <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.MenuLink("Segmentation", "Index", "Segmentation")</li>
                                <li>@Html.MenuLink("Average Revenue", "Index", "AverageRevenue")</li>
                                <li>@Html.MenuLink("Tenure", "Index", "Tenure")</li>
                            </ul>
                        </li>*@
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>

	    <div class="container">
            <noscript>
                <div class="alert">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Warning!</strong> Please enable JavaScript in your browser!
                </div>
            </noscript>

            <div class="page-header">
                <h2>@ViewBag.Title</h2>
            </div>
            <div>
                @RenderBody()
            </div>    
        </div>
    </div>
    <div id="footer">
        <div class="container">
            <p class="text-muted credit">
                Copyright Tote To Toe. All Rights Reserved.
            </p>
        </div>
    </div>  
    
    @{
        Html.Telerik().ScriptRegistrar()
            .DefaultGroup(grp => grp
                .Add("jquery.validate.min.js")
                .Add("jquery.validate.unobtrusive.min.js")
                .Add("jquery.unobtrusive-ajax.min.js")
                .Add("jquery-ui-1.8.24.min.js"))
            .Render();
    }  

    <script type="text/javascript">
        $(document).ready(function () {
            $.validator.addMethod(
                "date",
                function (value, element) {
                    var bits = value.match(/([0-9]+)/gi), str;
                    if (!bits)
                        return this.optional(element) || false;
                    str = bits[1] + '/' + bits[0] + '/' + bits[2];

                    return this.optional(element) || !/Invalid|NaN/.test(new Date(str));
                },
                "Please enter a date in the format dd/MM/yyyy"
            );
        })
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
