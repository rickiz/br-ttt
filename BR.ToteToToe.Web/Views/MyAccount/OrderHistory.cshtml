@using BR.ToteToToe.Web.Helpers
@using BR.ToteToToe.Web.ViewModels

@model BR.ToteToToe.Web.ViewModels.MyAccountOrderHistoryViewModel

@{
    ViewBag.Title = "TOTE TO TOE : My Virtual Fashion Wardrobe";
    var totalItems = Model.Items.Count;
}

<div id="wrap">
    <br />


    <form id="form1" name="form1" method="post" action="">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td align="left" style="font-size: 18px; color: #666;">My Virtual Fashion Wardrobe<br />
                </td>
            </tr>
            <tr>
                <td valign="top">
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <td width="97" colspan="3" valign="top" style="background-image: url(../images/wardrobe.gif); background-repeat: no-repeat;">
                                <br />
                                <table width="97%" border="0" align="center" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td colspan="4">&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td colspan="4">
                                            <table width="136" border="0" align="right" cellpadding="0" cellspacing="0">
                                                <tr>
                                                    <td width="136">
                                                        <div class="select-style" style="margin-right: 3px;">
                                                            @Html.DropDownListFor(model => model.StatusID, Util.GetList(RefType.Status, defaultText: "Filter by Status"))
                                                        </div>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="25%">&nbsp;</td>
                                        <td width="25%">&nbsp;</td>
                                        <td width="25%">&nbsp;</td>
                                        <td width="25%">&nbsp;</td>
                                    </tr>
                                    <tr>
                                        @for (int i = 0; i < 4; i++)
                                        {
                                            MyAccountOrderHistoryItem item = null;
                                            if (totalItems > i) { item = Model.Items[i]; }                                                
                                            
                                            <td align="center" valign="top">
                                                <div style="height: 191px;">
                                                @if (item != null)
                                                {
                                                    <br />
                                                    <img src="@Url.Content(item.ImageUrl.Replace(" ",""))" width="187" height="116" />
                                                    @*<img src="images/sampleshoes/02a.jpg" width="187" height="116" />*@
                                                    <br />
                                                    @:Order Date: @item.OrderDate
                                                    <br />
                                                    @:Order No:  @Html.ActionLink(item.SalesOrderID.ToString(), MVC.MyAccount.OrderSummary(item.SalesOrderID))
                                                    <br />
                                                    @:Status: @item.Status
                                                    <br />
                                                    @:ETA: @item.ETA
                                                }
                                                    </div>
                                            </td>
                                        }
                                    </tr>
                                </table>
                                <br />
                                <br />
                                <table width="97%" border="0" align="center" cellpadding="0" cellspacing="0">
                                    <tr>
                                        @for (int i = 4; i < 9; i++)
                                        {
                                            MyAccountOrderHistoryItem item = null;
                                            if (totalItems > i) { item = Model.Items[i]; }                                                
                                            
                                            <td width="25%" align="center" valign="top">
                                                <div style="height: 191px;">
                                                @if (item != null)
                                                {
                                                    <br />
                                                    <img src="@Url.Content(item.ImageUrl.Replace(" ",""))" width="187" height="116" />
                                                    @*<img src="images/sampleshoes/02a.jpg" width="187" height="116" />*@
                                                    <br />
                                                    @:Order Date: @item.OrderDate
                                                    <br />
                                                    @:Order No:  @Html.ActionLink(item.SalesOrderID.ToString(), MVC.MyAccount.OrderSummary(item.SalesOrderID))
                                                    <br />
                                                    @:Status: @item.Status
                                                    <br />
                                                    @:ETA: @item.ETA
                                                }
                                                    </div>
                                            </td>
                                        }
                                    </tr>
                                </table>
                                <br />
                                <table width="97%" border="0" align="center" cellpadding="0" cellspacing="0">
                                    <tr>
                                        @for (int i = 9; i < 13; i++)
                                        {
                                            MyAccountOrderHistoryItem item = null;
                                            if (totalItems > i) { item = Model.Items[i]; }                                                
                                            
