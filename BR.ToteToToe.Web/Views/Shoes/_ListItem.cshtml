<img src="@Url.Content(string.Format("~/Images/{0}/{1}",
                        Model.CategoryName.Replace(" ",""),
                        Model.ModelMainImage))"
    id="@string.Format("shoes_{0}", Model.ModelID)"  
    name="@string.Format("shoes_{0}", Model.ModelID)" 
    width="236" height="160" style="border:none;"
    onmouseout="ChangeImage(this,
                            '@Url.Content(string.Format("~/Images/{0}/{1}",
                            Model.CategoryName.Replace(" ",""),
                            Model.ModelMainImage))')"
